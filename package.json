{
  "name": "moka2popsy",
  "version": "0.0.7",
  "description": "Transformation d'un fichier Moka en Popsy",
  "main": "main.js",
  "scripts": {
    "start": "electron app/main.js",
    "test": "xo",
    "build": "electron-packager app/ --out=dist --asar --overwrite --all",
    "clean": "rm -rf dist",
    "clean:mac": "rm -rf dist/mac",
    "clean:win": "rm -rf dist/win",
    "dist:mac": "npm run clean:mac && build --mac",
    "dist:win": "npm run clean:win && build --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Proglab/electron.git"
  },
  "keywords": [],
  "author": "Fabrice Gyre",
  "license": "private",
  "devDependencies": {
    "asar": "^0.13.1",
    "devtron": "^1.4.0",
    "electron": "^1.8.8",
    "electron-builder": "^19.56.2",
    "electron-debug": "^1.5.0",
    "electron-packager": "^9.1.0",
    "xo": "^0.18.2"
  },
  "build": {
    "appId": "com.my.app",
    "publish": [
      {
        "provider": "github",
        "owner": "Proglab",
        "repo": "electron"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "installerHeaderIcon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "dmg": {
      "icon": "build/dmg.icns",
      "contents": [
        {
          "x": 345,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 125,
          "y": 150,
          "type": "file"
        }
      ]
    }
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "csv-parse": "^1.3.3",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.17",
    "electron-updater": "^2.23.3",
    "jquery": "^3.3.1"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ]
  },
  "release": "build"
}
